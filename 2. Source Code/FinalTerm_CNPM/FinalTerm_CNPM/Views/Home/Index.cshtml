@{
    ViewBag.Title = "Home Page";
}

@section Styles{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Merriweather:400,900,900i" rel="stylesheet">
    <script src="//code.jquery.com/jquery-3.4.1.min.js"></script>
    <link href="~/Content/css/home_index.css" rel="stylesheet" type="text/css">
    <link href="~/Content/css/filter.css" rel="stylesheet" type="text/css">
}
@Html.Partial("_Filter")
<div id="content-wrap" style="clear: left">
    <main class="grid">
        <!-- Back to top button -->
        <a id="button"></a>

        @for (int i = 0; i < 20; i++)
        {
            <article>
                <img src="~/Content/sample.jpg" alt="Sample photo">
                <div class="text">
                    <h3>Laptop 01</h3>
                    <p>10.000.000 vnd</p>
                    <button><i style="font-size:15px" class="fa">&#xf07a;&nbsp;</i>Add to Cart</button>
                </div>
            </article>
        }
    </main>

    @section scripts{
        <script src="~/Scripts/js/back-top-button.js" language="javascript" type="text/javascript"></script>
    }
</div>
